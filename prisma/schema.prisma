/// @@allow('read', auth() != null && published)
/// @@allow('all', author == auth())
model Post {
    id String @id() @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()
    /// @length(1, 256)
    title String
    content String
    published Boolean @default(false)
